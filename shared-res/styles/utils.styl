centered-margin()
    margin-left auto
    margin-right auto
    width 100%
centered-flex-container()
    display flex
    align-items center
    justify-content center
centered-absolute-transform()
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

trans(time=0.2s)
    transition all time ease

button-no-styles()
    background none
    outline none
    border none
    margin 0
    padding 0
    cursor pointer
list-no-styles()
    margin 0
    padding 0
    list-style none
input-no-styles()
    background none
    outline none
    border none
    margin 0
    padding 0

svg-inside(size=40px, marginLeft=10px, marginRight=10px)
    display flex
    align-items center
    > img
        width size
        height size
        margin 0 marginRight 0 marginLeft

pc-hidden()
    @media ({desktop})
        display none
mobile-hidden()
    @media ({mobile})
        display none
